@model IEnumerable<BTLPMQL.Models.NhapKhau>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color: blueviolet">Rượu Nhập Khẩu</h2>
<hr />
<p>
    @Html.ActionLink("Nhập Mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenRuou)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NongDo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TinhChat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoLuong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonVi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TheTich)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NguonGoc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NguoiXuat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NguoiNhap)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr style="border: 1px solid #808080; background-color: #ccc;border-style: none;">
        <td>
            @Html.DisplayFor(modelItem => item.TenRuou)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NongDo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TinhChat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DonVi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TheTich)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NguonGoc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NguoiXuat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NguoiNhap)
        </td>
        <td>
            @Html.Raw(item.Note)
        </td>
        <td style="border: 1px solid #808080; background-color: #ccc;border-style: none;">
            @Html.ActionLink("Sửa", "Edit", new { id=item.IDRuou }) |
            @Html.ActionLink("Chi Tiết", "Details", new { id=item.IDRuou }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.IDRuou })
        </td>
    </tr>
}

</table>
